<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/busqueda_download_result_nombre_cientifico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre cientifico"
        android:textColor="@android:color/black"

        android:textStyle="italic" />

    <TextView
        android:id="@+id/busqueda_download_result_nombre_comun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre comun"
        android:textColor="@android:color/black"

        android:layout_below="@id/busqueda_download_result_nombre_cientifico" />

    <TextView
        android:id="@+id/busqueda_download_result_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="color1"
        android:textColor="@android:color/black"

        android:layout_alignTop="@id/busqueda_download_result_nombre_comun"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/busqueda_download_result_nombre_familia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre familia"
        android:textColor="@android:color/black"
        android:maxLines="3"

        android:layout_below="@id/busqueda_download_result_nombre_comun" />

    <TextView
        android:id="@+id/busqueda_download_result_color2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="color2"
        android:textColor="@android:color/black"
        android:visibility="gone"

        android:layout_alignTop="@id/busqueda_download_result_nombre_familia"
        android:layout_alignParentRight="true" />

</RelativeLayout>