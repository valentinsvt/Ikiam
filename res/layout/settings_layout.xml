<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/settings_btn_upload"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_btn_upload"
                android:background="@drawable/button_blue"
                style="@style/ButtonText"

                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/settings_btn_download"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_btn_download"
                android:background="@drawable/button_green"
                style="@style/ButtonText"

                android:layout_marginTop="20dp" />

            <CheckBox
                android:id="@+id/settings_chk_achievements"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_chk_achevements"
                android:layout_marginTop="32dp"
                android:checked="false" />

            <Button
                android:id="@id/settings_btn_estadisticas"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_show_estadisticas"
                android:background="@drawable/button_black"
                style="@style/ButtonText"

                android:layout_marginTop="15dp" />

            <Button
                android:id="@id/settings_btn_reset_achievements"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_reset_achievements"
                android:background="@drawable/button_black"
                style="@style/ButtonText"

                android:layout_marginTop="15dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>