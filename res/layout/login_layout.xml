<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:facebook="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:layout_marginTop="20dp"
                  android:orientation="vertical"
                  android:layout_alignParentTop="true"
                  android:id="@+id/user_info">
        <com.facebook.widget.ProfilePictureView
                android:id="@+id/selection_profile_pic"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                facebook:preset_size="small" />
        <TextView
                android:id="@+id/selection_user_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="#333"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/selection_profile_pic"/>
        <com.facebook.widget.LoginButton
                android:id="@+id/login_facebook_logged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/selection_user_name"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/botones_cuenta"

            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/user_info" android:layout_alignParentEnd="true">

        <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/login_crear_cuenta"
                android:id="@+id/button_crear"
                android:background="#d0000001"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:textStyle="bold"
                android:textColor="#fffffef2" android:layout_marginTop="20dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/login_separados"
                android:id="@+id/separador" android:textAlignment="center"
                android:layout_above="@+id/login_facebook"
                android:layout_below="@+id/button_crear"
                android:layout_alignParentStart="false" android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" android:paddingTop="5dp" android:paddingLeft="160dp"/>

        <com.facebook.widget.LoginButton
                android:id="@+id/login_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"/>



    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/body"
            android:layout_width="fill_parent"
            android:layout_height="440dp"
            android:layout_below="@+id/botones_cuenta" android:layout_alignParentEnd="true">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_marginTop="39dp"
                android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/login_email"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/email" android:layout_alignParentStart="true"
                android:textSize="18dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/login_password"
                android:id="@+id/textView2" android:layout_below="@+id/textView" android:layout_alignParentStart="true"
                android:layout_marginTop="52dp" android:textSize="18dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass"
                android:layout_alignBottom="@+id/textView2" android:layout_alignParentEnd="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass2" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login_repetir_pass"
                android:id="@+id/textView3"
                android:textSize="18dp" android:layout_alignBottom="@+id/pass2"
                android:layout_toLeftOf="@+id/pass2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login_nombre"
                android:id="@+id/textView4" android:layout_below="@+id/textView3" android:layout_alignParentStart="true"
                android:layout_marginTop="37dp" android:textSize="18dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login_apellido"
                android:id="@+id/textView5"
                android:layout_marginTop="41dp"
                android:layout_below="@+id/textView4" android:layout_alignParentStart="true" android:textSize="18dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nombre" android:layout_above="@+id/textView5"
                android:layout_toRightOf="@+id/textView3"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/apellido" android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login_crear_cuenta"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:textAlignment="center" android:paddingTop="10dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>

</RelativeLayout>